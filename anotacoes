no front, pra criptografar a senha
    npm install crypto-js
const CryptoJS = require('crypto-js'); // Se estiver usando Node.js, ou use a versão CDN no browser

function gerarHashSHA256(senha) {
    return CryptoJS.SHA256(senha).toString(CryptoJS.enc.Base64);  // Retorna a senha como hash em Base64
}

// Exemplo de uso
const senha = "minhaSenhaSuperSecreta";
const senhaHash = gerarHashSHA256(senha);

console.log(senhaHash); // Você verá o hash da senha (em Base64) para enviar ao servidor
       
       
       
       
       
       
       
